  "devDependencies": {
    "@eslint/eslintrc": "3.3.1",
    "@tailwindcss/postcss": "4.1.12",
    "@tailwindcss/typography": "0.5.16",
    "@types/node": "24.3.0",
    "@types/react": "19.1.11",
